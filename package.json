{
  "name": "typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "yarn run build && yarn run format && yarn run lint && yarn run package && yarn test",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@octokit/types": "^6.14.2",
    "@octokit/webhooks": "^9.2.0"
  },
  "devDependencies": {
    "@typeform/eslint-config": "^3.0.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.9",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.17.0",
    "husky": ">=6",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "lint-staged": ">=10",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.1.3"
  },
  "prettier": "@typeform/eslint-config/prettier",
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.ts": "prettier --write"
  }
}
